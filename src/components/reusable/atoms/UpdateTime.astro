---
const months = [
    "enero", "febrero", "marzo", "abril", "mayo", "junio",
    "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre"
  ];

  const currentDate = new Date();
  const dia = currentDate.getDate();
  const mes = currentDate.getMonth();
  const año = currentDate.getFullYear();

const result = `${año}年${mes}月${dia}日`;
---
<span class="flex justify-end items-center gap-1 text-xs">
    <img class="w-4 aspect-square" src="resource/svg/world.svg" alt="world icon">
    <span>
        最后更新于 <span class="text-lime-300">{result}</span>
    </span>
</span>